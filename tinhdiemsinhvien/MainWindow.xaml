        <TextBox x:Name="txtma" HorizontalAlignment="Left" Height="23" Margin="113,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFE0B90B"/>
        <TextBox x:Name="txtdiemvan" HorizontalAlignment="Left" Height="23" Margin="113,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFE0B908"/>
        <TextBox x:Name="txtdiemtoan" HorizontalAlignment="Left" Height="23" Margin="113,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Background="#FFDEB912"/>
        <Label Content="Mã SV" HorizontalAlignment="Left" Margin="21,51,0,0" VerticalAlignment="Top"/>
