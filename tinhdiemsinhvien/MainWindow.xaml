        <Label Content="Rèn luyện" HorizontalAlignment="Left" Margin="77,261,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbtot" Content="Tốt" HorizontalAlignment="Left" Margin="77,292,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbkha" Content="Khá" HorizontalAlignment="Left" Margin="207,292,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbyeu" Content="Yếu" HorizontalAlignment="Left" Margin="347,292,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnkq" Content="Kết quả" HorizontalAlignment="Left" Margin="366,107,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="btnkq_Click" Background="#FFEA095B"/>
        <Button x:Name="btnhuy" Content="Hủy" HorizontalAlignment="Left" Margin="366,47,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="btnhuy_Click" Background="#FFE00555"/>

    </Grid>
</Window>
